@model NZBlog.Entity.BlogType
@{
    ViewBag.Title = "BlogTypeEdit";
    Layout = "~/Views/Shared/_DataEditLayout.cshtml";
}

@section Header
{

}
<form class="form-horizontal" role="form" action="/admin/SubmitBlogType">
    <input type="hidden" class="form-control" name="TypeId" value="@Model.TypeId">
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">父类</label>
        <div class="col-sm-10">
            @Html.DropDownList("ParentId")
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">名称</label>
        <div class="col-sm-10">
            <input type="text" notnull title="名称" name="TypeName" class="form-control" value="@Model.TypeName">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">是否推荐</label>
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.IsDefautlt)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a id="btnSubmit" class="btn btn-success">提交</a>
        </div>
    </div>
</form>
@section Script
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnSubmit').mpost(function (data) {
                if (data.Status == 1) { okshow(data.Msg); } else { exshow(data.Msg); }
            });
        });
    </script>
}
